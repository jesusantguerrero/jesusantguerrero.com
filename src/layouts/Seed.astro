---
import Header from "../components/Header.vue"
import SmartSeedPreview from "../components/SmartSeedPreview.vue"
import Webmentions from "../components/Webmentions.astro"
const { content } = Astro.props;

const postURL = "https://jesusantguerrero.netlify.app" + Astro.request.canonicalURL.pathname
const WebmentionEndpoint = "https://webmention.io/api/mentions.jf2?"
const webMentions = await fetch(`${WebmentionEndpoint}target=${postURL}`).then(res => res.json());
console.log(webMentions);
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{content.title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href={Astro.resolve("../styles/global.css")}>
    <link rel="pingback" href={`https://webmention.io/webmention?forward=${postURL}/webmention`} />
    <Webmentions />
</head>
<body>
    <main class="mb-20">
        <Header client:visible show-logo={true} />
        <article class="max-w-5xl pt-20 mx-auto overflow-visible">
            <h1 class="mb-1 text-xl font-bold text-gray-400"> {content.title }</h1>
            <div class="flex mb-5 space-x-5 text-sm text-gray-500">
                <div>Status: <span class="text-green-500 font-bold"><i class="fa fa-seedling"/>{content.status}</span> </div>
                <div>Expertise: </div>
                <div>PlantDate: <span class="text-accent-400 font-bold">{content.planted}</span></div>
                <div>Last Update: <span class="text-accent-400 font-bold">{content.checked || content.planted }</span></div>
            </div>
            <section class="prose text-gray-500 seed-article">
                <slot />
                <SmartSeedPreview client:load />
            </section>
            <section>
                { webMentions.children.length && <div class="text-sm text-gray-500">
                    <a href={`https://webmention.io/${postURL}/`}>
                        <i class="text-green-500 fa fa-comments"></i>
                        {webMentions.children}
                    </a>
                </div> }
            </section>
        </article>
    </main>
    <footer class="w-full py-5 text-gray-400 border-t">
        <div class="mx-auto text-xs max-w-7xl">2021 Made with <span class="font-bold text-accent-400">code</span> by <span class="font-bold underline">Jesus Guerrero</span></div>
    </footer>
</body>
</html>

<style lang="scss" global>
.seed-article a, .seed-article .prose a {
    &[href*="/garden/seeds/"] {
        @apply text-dodgerblue-400 font-bold border-dashed border-b no-underline border-dodgerblue-400;
    }
}
</style>
