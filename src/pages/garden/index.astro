---
import Page from "../../layouts/Page.astro";
import GardenSeedPreview from "../../components/GardenSeedPreview.astro";
import { getCollection } from 'astro:content';

let title = "Garden";
const gardenSeeds = await getCollection('seeds');
---
<Page title={title} showLogo={true}>
    <article class="max-w-4xl pt-20 mx-auto overflow-visible prose text-left text-gray-700">
        <h2 class="mb-8 text-xl font-bold text-gray-200">Welcome to my Digital Garden</h2>
        <section class="mx-auto text-gray-300">
            <p>
                This is a collection of thoughts, notes, 
                resources and explorations I'm currently cultivating. 
                I let myself immerse in some topics of my interest even out of tech.
            </p>
        </section>

        <section class="grid grid-cols-1 gap-4 mt-10 sm:grid-cols-2 md:grid-cols-2">
            {gardenSeeds.map( seed => 
                <GardenSeedPreview seed={seed} classes="max-w-md mx-2 my-2" />
            )}
        </section>
    </article>
</Page>
