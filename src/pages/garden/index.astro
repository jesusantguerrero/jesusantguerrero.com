---
import Page from "../../layouts/Page.astro";
import GardenSeedPreview from "../../components/GardenSeedPreview.astro";
import { getCollection } from 'astro:content';

let title = "Garden";
const seeds = await getCollection('seeds');

const evergreens = seeds.filter(seed => seed.data.status == 'evergreen')
const drafts = seeds.filter(seed => seed.data.status !== 'evergreen')
---
<Page title={title} showLogo={true}>
    <article class="max-w-7xl pt-20 mx-auto overflow-visible prose text-left text-gray-700">
        <header>
            <h2 class="mb-8 text-xl font-bold text-gray-200">Welcome to my Digital Garden</h2>
            <section class="mx-auto text-gray-300">
                <p>
                    This is a collection of thoughts, notes, 
                    resources and explorations I'm currently cultivating. 
                    I let myself immerse in some topics of my interest even out of tech.
                </p>
            </section>
        </header>

        <main class="w-full flex">
            <section class="w-7/12 bg-red-500">
                <header>
                    <h2 class="mb-8 text-xl font-bold text-gray-200 bg-red-700">Evergreen</h2>
                    <section class="mx-auto text-gray-300">
                        <p>
                            Strong explorations.
                        </p>
                    </section>
                </header>
                <section class="grid grid-cols-1 gap-4 mt-10 sm:grid-cols-2 md:grid-cols-2">
                    {evergreens.map( seed => 
                        <GardenSeedPreview seed={seed} classes="max-w-md mx-2 my-2" />
                    )}
                </section>
            </section>
            <section class="">
                {drafts.map( seed => 
                    <GardenSeedPreview seed={seed} classes="max-w-md mx-2 my-2" />
                )}
            </section>

        </main>
    </article>
</Page>
