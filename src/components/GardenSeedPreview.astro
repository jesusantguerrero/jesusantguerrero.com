---
export interface GardenSeed {
    title: string,
    planted: string,
    tags: string[],
    slug: string
}

export interface Props {
    seed: GardenSeed
}

const { seed } = Astro.props;
---

    <div class="px-10 py-5 text-gray-400 transition transform border border-gray-100 rounded-lg cursor-pointer hover:text-gray-500 hover:bg-gray-50">
        <h4 class="font-bold "><a href={`/garden/seeds/${seed.slug}`} class="block">{seed.title}</a></h4>
        { seed.description && <p class="mt-2 text-sm"> seed.description </p>}
        <div class="flex items-center justify-between ">
            <div class="text-left language-container">
                <div class="space-x-2 "> { seed.tags && seed.tags.map(tag => (
                    <a href={`/garden/tag/${tag}`} class="inline-block py-1 text-xs rounded-md text-accent-500">#{ tag }</a>
                ))}</div>
            </div>
            <div class="capitalize">
                Lang: { seed.language }
            </div>
        </div>
        <div class="divide-y-2 divide-gray-400"></div>
        <div class="flex justify-between">
            <div>
                { seed.planted }
            </div>
            <div class="capitalize">
                { seed.status }
            </div>
        </div>
    </div>