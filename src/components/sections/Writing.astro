---
import { fetchPostsByUser } from "../../utils/apis.ts";
import Project from "../Project.astro";
import BlockSection from "./BlockSection.astro";

const posts = await fetchPostsByUser('freesgen');
---
<BlockSection 
    id="writing"
    title="Writing"
    tags={["My latest posts"]}
>
    <div class="mt-10 space-y-5">
        { posts.map(post => (
            <Project project={post} projectType="article" className="w-full" />
        ))}
    </div>
</BlockSection>
