---
import { Markdown } from 'astro/components';
import SectionTag  from "../SectionTag.astro";
const featured = {
    BlogPost: ["Name", "url"],
    GardenSeed: ["Name", "url"],
    TechnicalExploration: ["Dapps", "Dapps and Web3"],
    Project: ["Zen.", "url"],
    BookRead: ["name", "url"]
}
---
<article class="intro-section" id="about">
    <section class="flex flex-col pb-10 personal-card md:pb-0 md:flex-row">
        <div class="w-4/12 mt-10 personal-card_left">
            <SectionTag 
                title="Jesus" 
                subtitle="Guerrero"
                tags={['Full-Stack Developer', 'Software Engineer', 'Creator']}
            />
        </div>

        <div class="px-10 mt-64 space-y-10 text-lg text-gray-500 personal-card_body md:space-y-5 md:px-20 md:mt-0 md:w-8/12">
            <h1 class="font-bold"> Recently Featured</h1>
            <div>
                <ul>
                    {Object.entries(featured).map(([sectionName, [article, link]]) => (
                        <li> <span class="font-bold text-gray-700">{sectionName}</span>: <a href={link}>{article}</a></li>
                    ))
                    }
                </ul>
            </div>
        </div>
    </section>
</article>

<style lang="scss">
    article {
        @apply bg-white rounded-lg;
        display: flex;
        align-items: center;
        width: 100%;
        height: 100vh;
    }
    
    section.personal-card {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80%;
        width: 100%;
        margin: auto;
        position: relative;
        @apply bg-gray-50 
        text-gray-700
        max-w-6xl
        mx-auto;

        &:after {
            content: '';
            position: absolute;
            bottom: 0;
            right: 20%;
            height: 0;
            width: 0;
            border-bottom: 30px solid var(--darken-primary-color);
            @apply border-white;
            border-right: 50px solid transparent;
            border-left: 50px solid transparent;
            border-top: 50px solid transparent;
        }
    }

    @media (max-width: 768px) {
        article {
            height: fit-content;
        }

        section.personal-card {
            width: 90%;
            height: 95%;

             &:after {
                bottom: 0;
                right: 20%;
                height: 0;
                width: 0;
                border-bottom: 16px solid var(--darken-primary-color);
                @apply border-white;
                border-right: 20px solid transparent;
                border-left: 20px solid transparent;
                border-top: 20px solid transparent;
            }
        }
    }
</style>
